
@{
    ViewData["Title"] = "CompleteTask";
}

@model TimeCalculatorDemoApp.Models.TaskModel

<h2>Complete Task</h2>

<form asp-action="CompleteTask">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="CompletionTime"></label>
        <input asp-for="CompletionTime" type="datetime-local" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success">Complete Task</button>
</form>
