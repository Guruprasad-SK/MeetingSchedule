
@{
    ViewData["Title"] = "Index";
}

@model List<TaskModel>

<h2>Task List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Task Name</th>
            <th>Start Time</th>
            <th>End Time</th>
            <th>Completion Time</th>
            <th>Total Time (hours)</th>
            <th>Completed</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model)
        {
            <tr>
                <td>@task.TaskName</td>
                <td>@task.StartTime.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@task.EndTime.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@(task.Completed ? task.CompletionTime.ToString("yyyy-MM-dd HH:mm") : "")</td>
                <td>@task.TotalTime</td>
                <td>@(task.Completed ? "Yes" : "No")</td>
                <td>
                    @if (!task.Completed)
                    {
                        <a asp-action="CompleteTask" asp-route-id="@task.Id" class="btn btn-primary">Complete Task</a>
                    }
                   
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="AssignTask" class="btn btn-success">Assign Task</a>
</div>



